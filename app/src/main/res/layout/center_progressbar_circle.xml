<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- https://github.com/VaibhavLakhera/Circular-Progress-View -->
    <com.vaibhavlakhera.circularprogressview.CircularProgressView
        android:id="@+id/cpb_center_circlebar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:padding="5dp"
        app:animate="true"
        app:animateDuration="600"
        app:fillColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressColor="#0080FF"
        app:progressInterpolator="@android:anim/accelerate_decelerate_interpolator"
        app:progressRoundCap="true"
        app:progressTextColor="#0080FF"
        app:progressTextEnabled="true"
        app:progressTextSize="12sp"
        app:progressTextType="percent"
        app:progressValue="50"
        app:progressWidth="8dp"
        app:startAngle="270"
        app:totalColor="#A9D0F5"
        app:totalValue="100"
        app:totalWidth="8dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>